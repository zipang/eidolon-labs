<section class="fullscreen intro {{ bg_class }}"
	{{#if bg_image }}style="background-image:url('{{ bg_image }}');"{{/if }}>

	<div class="container" data-aos="fade-up" data-aos-delay="1000">
		<div class="row">
			{{#if overlay }}
			<div class="color-overlay" style="background-color:{{ overlay }};"></div>
			{{/if }}
			<div class="col-xs-12 col-md-8 col-md-offset-2">
				<h1 class="display-1 entry-title">{{ uppercase title }}</h1>
				<p class="display entry-summary">{{{ headline }}}</p>
			</div>
		</div>
	</div>
	{{#if photographer}}{{> unsplash_badge }}{{/if}}
</section>
